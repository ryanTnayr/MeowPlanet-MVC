@model IEnumerable<MeowPlanet.ViewModels.MemberInfo.CatSelectViewModel>



@foreach (var item in Model)
{
    
    string sex = item.Sex == true ? "喵弟弟" : "喵妹妹";
    

    <div data-id="@item.CatId"class="cat-select d-flex align-items-center px-4" style="cursor:pointer;" onclick="ToDetail(this.dataset.id)">
                
        <img src="@item.Img01" style="width:70%;height:90%;border-radius:30px; object-fit:cover; box-shadow: 0 0 3rem rgb(134 171 190 / 50%) inset;" >

        <div class="text-center d-flex flex-column align-items-center justify-content-center" style="width:219px;height:110px;">
            <p style="font-size:18px">@item.Name</p>
            <p style="font-size:18px">@item.Breed</p>
            <p style="font-size:18px">@sex</p>
        </div>
    </div>

}


